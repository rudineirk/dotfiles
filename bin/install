#!/bin/bash

dir="$( builtin cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

for script in "$dir"/*; do
    [[ "${script##*/}" == "install" ]] && continue
    mkdir -p ~/bin
    [[ -L ~/bin/"${script##*/}" || -e ~/bin/"${script##*/}" ]] && unlink ~/bin/"${script##*/}"
    ln -s "$script" ~/bin/
done
